<?xml version="1.0" encoding="utf-8"?>


<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/aboutus_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="10dp"
    android:backgroundTintMode="src_in"
    app:cardCornerRadius="20dp"
    app:cardElevation="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:id="@+id/org_image"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@color/black"
            android:contentDescription="image"
            android:src="@drawable/baseline_person_24_white" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/org_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:fontFamily="@font/genos_bold"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/org_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="postion"
                android:textColor="@color/white"
                android:fontFamily="@font/genos_light"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/org_linkedin"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/black"
                    android:clickable="true"
                    android:contentDescription="Linkedin"
                    android:focusable="true"
                    android:src="@drawable/linkedin_logo" />

                <ImageView
                    android:id="@+id/org_insta"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="10dp"
                    android:background="@color/black"
                    android:clickable="true"
                    android:contentDescription="Instagram"
                    android:focusable="true"
                    android:src="@drawable/insta_logo" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>