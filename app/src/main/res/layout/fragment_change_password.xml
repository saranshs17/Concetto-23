<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".changePassword.ChangePassword"
    android:background="@color/black"
    android:layout_marginTop="80dp">


    <LinearLayout
        android:layout_marginTop="80dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:gravity="center">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Change Password"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            />

        <EditText
            android:id="@+id/changePasswordEmailEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="50dp"
            android:drawablePadding="20dp"
            android:hint="Player Email"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@color/white"
            android:textSize="20sp"
            android:background="@drawable/edit_text_style"
            android:inputType="text"/>

        <EditText
            android:id="@+id/OldPasswordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:drawablePadding="20dp"
            android:hint="Old Password"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@color/white"
            android:textSize="20sp"
            android:background="@drawable/edit_text_style"
            android:inputType="text"/>

        <EditText
            android:id="@+id/NewPasswordEdit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            android:drawablePadding="20dp"
            android:hint="New Password"
            android:layout_marginTop="20dp"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:textColor="@color/white"
            android:textColorHint="@color/gray"
            android:textCursorDrawable="@color/white"
            android:textSize="20sp"
            android:background="@drawable/edit_text_style"
            android:inputType="text"/>



        <ProgressBar
            android:id="@+id/changepasswordProgressBar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:indeterminate="true"
            android:visibility="gone"
            android:indeterminateDrawable="@drawable/preloading_component" />



        <com.google.android.material.button.MaterialButton
            android:id="@+id/changePassButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:backgroundTint="@color/buttonColor"
            android:layout_marginTop="40dp"
            android:padding="20dp"
            app:cornerRadius="10dp"
            />

    </LinearLayout>



</ScrollView>