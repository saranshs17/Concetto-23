<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.singleevent.RulesFragment"
    android:orientation="vertical">

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

 <androidx.recyclerview.widget.RecyclerView
     android:layout_marginTop="10dp"
     android:padding="10dp"
     android:id="@+id/rvRules"
     android:nestedScrollingEnabled="false"
     android:background="@drawable/event_card_border"
     android:layout_width="match_parent"
     android:layout_height="wrap_content" />

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="horizontal"
     android:layout_margin="10dp"
     android:layout_gravity="center">

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="center"
      android:layout_marginStart="10dp"
      android:fontFamily="@font/genos_light"
      android:text="For more info:"
      android:textColor="@color/teal_700"
      android:textSize="24sp"
      android:textStyle="bold" />

  <TextView
      android:id="@+id/pdfLink"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:fontFamily="@font/genos_light"
      android:text="PDF Link"
      android:layout_gravity="center_vertical"
      android:textColor="#2F81F7"
      android:textSize="22sp" />
 </LinearLayout>

  <View
      android:layout_width="match_parent"
      android:layout_height="45dp"/>

 </LinearLayout>

</ScrollView>