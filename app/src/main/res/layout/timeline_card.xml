<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="30sp"
    android:layout_marginBottom="20sp"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_weight="1"
        android:gravity="end"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="end">

            <TextView
                android:layout_gravity="end|center_vertical"
                android:id="@+id/event_onLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/genos_light"
                android:textSize="16sp"
                android:text="@string/app_name"
                android:textColor="@color/white" />

            <TextView
                android:layout_gravity="end|center_vertical"
                android:id="@+id/venue_onLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/genos_light"
                android:textSize="16sp"
                android:text="@string/app_name"
                android:textColor="@color/white" />


        </androidx.appcompat.widget.LinearLayoutCompat>



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:background="@drawable/event_card_border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_onLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="6:00PM"
                android:layout_gravity="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/date_onLeft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="3 October 2023 6:00PM IST"
                android:layout_gravity="end|center_vertical"
                android:textColor="@color/white" />


        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:drawableLeftCompat="@drawable/timeline_circles" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        >

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/event_onRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/genos_light"
                android:text="@string/app_name"
                android:textSize="16sp"
                android:textColor="@color/white" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/venue_onRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/genos_light"
                android:text="@string/app_name"
                android:textSize="16sp"
                android:textColor="@color/white" />


        </androidx.appcompat.widget.LinearLayoutCompat>



        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/event_card_border"
            android:orientation="vertical">

            <TextView
                android:id="@+id/time_onRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="6:00PM"
                android:layout_gravity="center"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/date_onRight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="5dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:text="3 October 2023 6:00PM IST"
                android:layout_gravity="start|center_vertical"
                android:textColor="@color/white" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </FrameLayout>
</LinearLayout>